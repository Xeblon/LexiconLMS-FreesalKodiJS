@model LexiconLMS.Models.Event

@{
    ViewBag.Title = "Details";
    string date = Model.Date.Date.ToString("yyyy/MM/dd");
    string dayTime = "";
    switch(Model.Time)
    {
        case 1:
            dayTime = "Förmiddag";
            break;
        case 2:
            dayTime = "Eftermiddag";
            break;
        case 3:
            dayTime = "Heldag";
            break;
        default:
            break;
    }
}
<div class="pageMenu"></div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>@Html.DisplayFor(model => model.Name)</h2>
            <p>@Html.DisplayFor(model => model.Summary)</p>
        </div><!-- .col-md-8 -->
        <div class="col-md-4 sideBlock">
        <h4>Date: @date</h4>
        <h5>@Html.DisplayFor(model => model.Date.DayOfWeek), @dayTime</h5>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Details", "Schedules", new { id = Model.ScheduleId }, null)
            </p>
        </div><!-- .col-md-4 -->
    </div><!-- .row -->
</div><!-- .container -->


